{
  "configFormat": "json",
  "environment": "browser",
  "typescript": true,
  "framework": "react",
  "features": [
    "prettier",
    "import",
    "jest",
    "a11y",
    "redux",
    "airbnb-style"
  ],
  "style": {
    "indent": 2,
    "quotes": "single",
    "semicolons": "always",
    "trailingComma": "es5",
    "lineEnding": "unix",
    "maxLineLength": 100
  }
}